{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "ES2020",
        "moduleResolution": "node",
        "strict": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "sourceMap": true,
        "outDir": "./dist",
        "allowJs": true,
        "skipLibCheck": true,
        "typeRoots": [
            "node_modules/@types",
            "./src/types"
        ],
        "baseUrl": "./",
        "paths": {
            "helpers/*": [
                "src/helpers/*"
            ],
            "constants/*": [
                "src/constants/*"
            ],
            "models/*": [
                "src/database/models/*"
            ],
            "api/*": [
                "src/api/*"
            ],
        }
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*"
    ],
    "lib": [
        "es2015"
    ]
}